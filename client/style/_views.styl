// Login

.loginView
  text-align center
  h3
    margin-bottom 10px

  #logo
    margin 60px auto 0px

  #logo img
    display block
    width 100px
    height auto
    margin 0 auto

  #logo span
    display none

// Buckets

.swatches
  overflow hidden

.swatches > div
  width 30px
  height 30px
  font-size 24px
  text-align center
  float left
  margin 0 10px 10px 0
  position relative
  cursor pointer

.swatches.icons
  div
    padding 2px
    opacity .5
  .selected
    opacity 1

.swatches.colors
  .selected:after
    display block
    content ''
    position absolute
    top 40%
    left 40%
    background-color #fff
    border-radius 100%
    width 20%
    height 20%

.icon-preview
  font-size 90px

// Routes

.routeEdit
  border-radius 2px
  background-color $eee

.bkts-wildcard, code
  font-weight 500

.bkts-wildcard
  padding 0 6px
  border-radius 2px

.bkts-wildcard-optional
  @extend .bkts-wildcard
  background-color rgba($primary, .15)
  darken($primary, 10)
  color #999

.bkts-wildcard-param
  @extend .bkts-wildcard
  background-color rgba($primary, .3)
  darken($primary, 30)

.bkts-wildcard-catchall
  @extend .bkts-wildcard
  color $primary

.route
  position relative
  padding-left 40px

  h2 a:hover
    text-decoration none

  .btn-icon
    opacity 0
    transition all 200ms ease-in-out
    transform scale(.8)
    position absolute
    top 0em
    left -10px

  &:hover .btn-icon
    opacity 1

.sortable
  cursor move
  margin 0
  padding 0
  list-style-type none

// Entries

.entry-publish
  padding 10px 15px
  margin 15px -15px 0
  border-top 1px solid #ddd

.entry
  padding 20px 15px
  margin 0 -15px
  border-bottom 1px solid #eee

  &.active
    background-color rgba(#eee, .5)

  h3
    font-size 18px
    margin-top 0
    font-weight 700

.entry-detail
  margin -80px 0 20px
