#bkts-sidebar
  background-color #f9f9f9

@media (min-width: 768px)
  #bkts-sidebar
    width 240px
    border-right 1px solid #ddd
    float left
    min-height 100%
    position fixed
    left 0
    top 0
    bottom 0
    overflow auto

  .loggedInView
    margin-left 240px

#logo
  position relative

  .bkts-icon
    display block
    position relative
    vertical-align middle

  a
    opacity .8
    user-select none

    &:hover
      opacity 1
      transition opacity 100ms ease-out
      text-decoration none

.version-badge
  font-size 12px
  border-radius 3px
  border 2px solid #969696
  padding .15em .4em
  margin-bottom 0 0 .4em
  color #666
  vertical-align top
  font-weight 500
  display inline-block
  font-family $sans
  position absolute
  top 37px
  left 15px
  transform scale(.8) rotate(-3deg)
  background #fff
  pointer-events none

// based on http://codepen.io/designcouch/pen/lgnDJ
.btn-menu
  border none !important
  margin-top 22px
  margin-right auto
  margin-left auto
  height 25px
  width 40px
  position relative
  cursor pointer
  background transparent !important

  &:focus, &:active:focus
    outline none

  &.active
    // override bootstrap's outline and shadow
    outline none !important
    box-shadow none !important
    span
      &:nth-of-type(1)
      &:nth-of-type(3)
        width 0%

      &:nth-of-type(2)
        transform rotate(45deg)
        background #0986bf

        &:before
          transform rotate(90deg)
          background #0986bf

  &:before
    content ''
    display block
    position absolute
    height 40px
    width 40px
    top -23px
    left -5px
    transition .25s ease-in-out

  span
    display block
    width 70%
    height 5px
    left 15%
    background #8b8b8b
    position absolute
    transition .25s ease-in-out

    &:nth-of-type(1)
      top 0px
      left auto
      right 15%

    &:nth-of-type(2)
      top 10px

      &:before
        content ''
        display block
        position absolute
        top 0
        left 0
        background #8b8b8b
        width 100%
        height 100%

    &:nth-of-type(3)
      top 20px



.nav-primary

  > li > a
    padding-left 40px

  a:first-child
    padding-right 40px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

  a:first-child .icon
    position absolute
    left 8px
    top 6px
    font-size 24px
    margin-right 4px
    vertical-align middle

  .icon
    color #888

  .bucket-add
    position absolute
    top 0
    right 0
    width 40px
    height 40px
    padding-left 13px
    background-color transparent

    .no-touch &
      opacity 0

    // padding-right 10px
    border-radius 50px

    .icon
      top 2px
      position relative
      font-size 13px

  li:hover .bucket-add
    opacity 1

  li.divider
    border-bottom 1px solid rgba(#ddd, .4)
    margin-left 40px

  > li > a:hover, > li > a:active
    background-color #fff
    color #555

  li.active
    background-color rgba(#fff, .4)

    // .bucket-add:hover
    //   background-color rgba(#fff, .2) !important

    a
      background-color inherit
      color #999

    a:hover
      background-color inherit
      color #999

  li a
    color #666

    &:hover
      color #333

addColor($name, $color)
  .color-{$name},
  .nav-primary > .bucket.color-{$name} > a,
  .nav-primary > .bucket.color-{$name} > a:hover,
  // .nav-primary > .bucket.color-{$name}.active .icon,
  .nav-primary > .bucket.color-{$name} .icon
    color $color
  .nav-primary > .bucket.color-{$name}:not(.active) > a:hover:not(:active)
    color lighten($color, 10)
  .swatches.colors > .{$name}
    background-color $color

addColor('teal', $teal)
addColor('green', $green)
addColor('blue', $blue)
addColor('red', $red)
addColor('orange', $orange)
addColor('yellow', $yellow)
addColor('purple', $purple)
addColor('gray', $gray)

.usernav .avatar
  transform scale(.8)
  transform-origin 0 50%
  @extend .nav-primary a:first-child .icon
  top 4px
  z-index 10
