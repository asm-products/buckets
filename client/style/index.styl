// Note: Most basic variables are in LESS at bootstrap.less

@import 'nib'

$primary = #edb91d

// Material Design 700
$red = #d01716
$green = #689f38
$blue = #0288d1
$orange = #f57c00
$yellow = #fbc02d
$teal = #009688
$purple = #7b1fa2
$gray = #9e9e9e

$sans = 'Avenir Next', Avenir, 'Helvetica Neue', Helvetica, 'Segoe UI', Segoe, Roboto, sans-serif

body
  background-color #fcfcfc
  display table
  width 100%
  display flex
  min-height 100vh
  flex-direction column

#bkts-content
  flex 1

.avatar
  vertical-align middle
  width 30px
  height 30px
  background-size cover, cover
  border-radius 20px
  display inline-block
  transform scale(.85)

#bkts-hdr
  color #555
  padding 5px 0

  .pull-right a
    position relative
    z-index 20

.form-control
  border-width 2px
  box-shadow none

  &:focus
    box-shadow none !important

.btn-icon
  .icon
    font-size 24px
    vertical-align middle
    line-height inherit

  &:hover
    text-decoration none

  &:active
    position relative
    top 1px

hr.tiny
  width 5%
  margin 8px auto
  border-bottom 1px solid #eee

.page-title
  font-weight 400
  letter-spacing -1px
  margin 0 0 15px
  padding 40px 15px 10px
  color #bbb
  border-bottom 1px solid #ddd
  font-size 36px

  .btn-link
    color rgba(#000, .4)

@import '_typography'
@import '_nav'
@import '_footer'
@import '_views'
@import '_toastr'

.tab-pane
  padding-top 20px

h4[data-toggle]
  cursor pointer

  .caret
    transition 200ms ease-out

  &.collapsed .caret
    transform rotate(-90deg)

.tooltip
  font-weight 500
  font-family $sans
  color #222

.userFields textarea.form-control
  font-size 14px

  @media (min-width: 400px)
    &
      // padding-top 12px
      font-size 16px
      line-height 20px

th
  font-weight 500

.has-slug
  border-radius bottom 0
  position relative
  z-index 5

.input-slug
  background-color #fcfcfc
  font-family Menlo, 'Courier New', monospace
  margin-top -2px
  border-radius top 0, bottom 6px
  color rgba(darken($primary, 40), .4)
  position relative
  z-index 2

  &:focus
    color darken($primary, 20)
    z-index 10

input[type="text"].form-control, textarea.form-control
  -webkit-appearance none

.nav-primary a:active, a.btn:not(.btn-link):active
  box-shadow rgba(#000, .2) 0 1px 2px
  transition box-shadow .15s ease-in

.input-sm, .input-lg
  padding-left 10px
  padding-right 10px

.input-lg
  font-weight bold

.btn-default
  background-color rgba(#fff, .5)

  &:hover
    background-color rgba(#fff, .9)

.pageBreadcrumb
  margin 10px 0
  background-color #f1f1f1
